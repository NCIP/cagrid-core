    <dependency rev="latest.integration" org="caGrid" name="DorianSystemTests" conf="default->default;endorsed->endorsed" />
    <dependency rev="latest.integration" org="caGrid" name="AuthenticationServiceSystemTests"  conf="default->default;endorsed->endorsed" />
    
    <!-- Dorian -->
    <dependency rev="latest.integration" org="caGrid" name="dorian" conf="default->client;endorsed->endorsed"/>
    
    <!-- CDS -->
    <dependency rev="latest.integration" org="caGrid" name="cds" conf="default->client"/>
    
