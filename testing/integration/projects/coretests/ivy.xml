<?xml version="1.0"?>

<ivy-module version="2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd">

  <info organisation="caGrid" module="coretests" revision="${project.version}">
    <license name="caGrid" url="http://cagrid.org/wiki/CaGrid:LICENSE-1.3"/>
    <description>The core service testing suite</description>
  </info>

  <configurations>
    <conf name="impl-test" visibility="private"/>
    <conf name="endorsed" visibility="private"/>
    <conf name="query" visibility="private"/>

    <!-- Public Configurations-->
    <conf name="default" visibility="public"/>
    <conf name="test" visibility="public" extends="default,impl-test"/>
  </configurations>


  <publications>
    <artifact name="caGrid-tests-${ivy.module}" conf="default" type="jar"/>
    <artifact name="caGrid-tests-${ivy.module}-tests" conf="test" type="jar"/>
  </publications>

  <dependencies>
    <!-- System Testing Dependencies -->
    <!-- <dependency rev="latest.integration" org="caGrid" name="echo" conf="impl-test->default"/> 
   
    -->
    <dependency rev="latest.integration" org="caGrid" name="cqlprocessors" conf="default,query->default"/>
    
    <!-- Core Dependencies -->
    <dependency rev="latest.integration" org="caGrid" name="core" conf="default->default"/>
    <dependency rev="latest.integration" org="caGrid" name="discovery" conf="impl-test->default"/>
    <dependency rev="latest.integration" org="caGrid" name="introduce" conf="default->core"/>
    <dependency rev="latest.integration" org="caGrid" name="testing" conf="impl-test->system"/>
        
    <dependency rev="latest.integration" org="caGrid" name="dorian" conf="default->client;endorsed->endorsed"/>
    <dependency rev="latest.integration" org="caGrid" name="gridgrouper" conf="impl-test->test"/>
    <dependency rev="latest.integration" org="caGrid" name="cds" conf="impl-test->client"/>

    <!-- External Dependencies -->
    <dependency rev="0.5.2-patched" org="jaxme" name="jaxmejs" conf="default->default"/>
    
  </dependencies>
</ivy-module>
