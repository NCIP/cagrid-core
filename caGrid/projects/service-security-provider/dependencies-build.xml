<?xml version="1.0"?>

<project name="dependencies" basedir="." xmlns:ivy="antlib:org.apache.ivy.ant">
	<property file="project.properties" />

	<property name="ivy-shared-targets.file" location="${basedir}/../../antfiles/ivy/ivy-shared-targets.xml" />
	<import file="${ivy-shared-targets.file}" />

	<target name="do.resolve-dependencies" depends="pre.resolve-dependencies">
		<ivy:retrieve conf="${ivy.resolve.configurations}" pattern="${ivy.resolved.artifacts.pattern}" sync="true" type="jar" />
		<ivy:retrieve conf="${ivy.resolve.configurations}" pattern="${basedir}/schema/ServiceSecurity/xsd/[artifact].[ext]" sync="true" type="xsd" />
	</target>

	<!-- Overloaded to support multiple artifact patterns  -->
	<target name="do.publish" depends="pre.publish">
		<publish-artifacts>
			<artifacts-list>
				<artifacts pattern="${ivy.generated.artifacts.dir}/jars/[artifact]-[revision].[ext]" />
				<artifacts pattern="${basedir}/schema/ServiceSecurity/[artifact].[ext]" />
			</artifacts-list>
		</publish-artifacts>
	</target>
</project>

