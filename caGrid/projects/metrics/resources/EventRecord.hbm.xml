<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.cagrid.metrics.common.EventRecord"
		table="EVENTS">
		<id name="id" column="event_id">
			<generator class="uuid" />
		</id>
		<property name="StartedAt" column="started_at" type="calendar" />
		<property name="EndedAt" column="ended_at" type="calendar" />
		<property name="ReportedAt" column="reported_at"
			type="calendar" />

		<many-to-one name="EventSource"
			class="org.cagrid.metrics.common.Component" cascade="all" />

		<component name="EventDescription"
			class="org.cagrid.metrics.common.EventDescription">
			<many-to-one name="InvocationEvent"
				column="invocation_event" cascade="all"
				class="org.cagrid.metrics.common.InvocationEvent" />
			<property name="ServiceLifeCycleEvent"
				column="service_lifecycle_event"
				type="org.cagrid.metrics.service.hibernate.ServiceLifeCycleEventType" />
			<property name="UsageEvent" column="usage_event"
				type="org.cagrid.metrics.service.hibernate.UsageEventType" />
			<property name="CustomEvent" column="custom_event"
				type="string" />
		</component>

		<many-to-one name="Community" column="community" cascade="all"
			class="org.cagrid.metrics.common.Community" />

		<component name="ReporterDetails"
			class="org.cagrid.metrics.common.ReporterDetails">
			<property name="identity" column="reporter_identity"
				type="string" />
			<property name="IPAddress" column="reporter_ip"
				type="string" />
		</component>
		<array name="AdditionalDetails" table="EVENT_DETAILS"
			cascade="all">
			<key column="event_id" />
			<list-index column="sort_order" />
			<many-to-many class="org.cagrid.metrics.common.Detail"
				column="detail_id" />
		</array>


	</class>
</hibernate-mapping>